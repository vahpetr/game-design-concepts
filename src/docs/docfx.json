{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "media/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "globalMetadata": {
      "_lang": "ru",
      "_appName": "Игровой дизайн",
      "_appTitle": "Игровой дизайн",
      "_enableSearch": true,
      "pdf": true
    }
  }
}